<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".view.fragments.complainers.ComplainAccountPageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/complain_account_log_out_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/login_signup_btn_bgd"
            android:text="Log Out"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/complain_account_image_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_perm_identity_24"
            android:contentDescription="@string/selected_image_will_be_displayed" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/complain_account_floating_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/complain_account_image_view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="-32dp"
            android:contentDescription="@string/select_type_of_image_to_be_uploaded"
            android:src="@drawable/ic_baseline_add_24" />


        <EditText
            android:id="@+id/complain_account_name"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/complain_account_floating_action_btn"
            android:layout_marginTop="60dp"
            android:background="@drawable/round_corner_grey_bgd"
            android:hint="Enter Name"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/complain_account_email"
            android:layout_width="match_parent"
            android:paddingStart="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/complain_account_name"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_corner_grey_bgd"
            android:hint="Enter Email"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/complain_account_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/complain_account_email"
            android:paddingStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_corner_grey_bgd"
            android:hint="Enter Phone Number"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/complain_account_save_data_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complain_account_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_signup_btn_bgd"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>