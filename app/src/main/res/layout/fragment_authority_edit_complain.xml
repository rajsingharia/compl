<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.authority.AuthorityEditComplainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/authority_complain_image_view"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_perm_identity_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authority_complain_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="40dp"
        android:text="Title"
        app:layout_constraintEnd_toEndOf="@+id/authority_complain_image_view"
        app:layout_constraintStart_toStartOf="@+id/authority_complain_image_view"
        app:layout_constraintTop_toBottomOf="@+id/authority_complain_image_view" />

    <TextView
        android:id="@+id/authority_complain_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="40dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="@+id/authority_complain_image_view"
        app:layout_constraintStart_toStartOf="@+id/authority_complain_image_view"
        app:layout_constraintTop_toBottomOf="@+id/authority_complain_title" />

    <TextView
        android:id="@+id/authority_complain_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="40dp"
        android:text="Address"
        app:layout_constraintEnd_toEndOf="@+id/authority_complain_image_view"
        app:layout_constraintStart_toStartOf="@+id/authority_complain_image_view"
        app:layout_constraintTop_toBottomOf="@+id/authority_complain_description" />

    <TextView
        android:id="@+id/authority_complain_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="40dp"
        android:text="Phone Number"
        app:layout_constraintEnd_toEndOf="@+id/authority_complain_image_view"
        app:layout_constraintStart_toStartOf="@+id/authority_complain_image_view"
        app:layout_constraintTop_toBottomOf="@+id/authority_complain_address" />

    <TextView
        android:id="@+id/authority_complain_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="40dp"
        android:text="Type"
        app:layout_constraintEnd_toEndOf="@+id/authority_complain_image_view"
        app:layout_constraintStart_toStartOf="@+id/authority_complain_image_view"
        app:layout_constraintTop_toBottomOf="@+id/authority_complain_phone_no" />

        <TextView
            android:id="@+id/authority_complain_current_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="40dp"
            android:text="Current Status"
            app:layout_constraintEnd_toEndOf="@+id/authority_complain_image_view"
            app:layout_constraintStart_toStartOf="@+id/authority_complain_image_view"
            app:layout_constraintTop_toBottomOf="@+id/authority_complain_type" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/authority_status_spinner"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/authority_complain_image_view"
        app:layout_constraintStart_toStartOf="@+id/authority_complain_image_view"
        app:layout_constraintTop_toBottomOf="@+id/authority_complain_current_status">

        <AutoCompleteTextView
            android:id="@+id/authority_auto_complete_drop_down_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:text="Status"
            tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/authority_current_state_save_data_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_signup_btn_bgd"
            android:text="Update"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/authority_complain_image_view"
            app:layout_constraintStart_toStartOf="@id/authority_complain_image_view"
            app:layout_constraintTop_toBottomOf="@id/authority_status_spinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>